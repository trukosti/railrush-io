# Server Configuration
PORT=3000
NODE_ENV=development

# Database Configuration (PostgreSQL)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=railrush
DB_USER=postgres
DB_PASSWORD=your_password

# Redis Configuration
REDIS_URL=redis://localhost:6379

# Game Configuration
MAX_PLAYERS_PER_ROOM=40
SERVER_TICK_RATE=20
RAIL_DECAY_TIME=30000
RESOURCE_SPAWN_RATE=5000
POWERUP_SPAWN_RATE=15000

# Security
SESSION_SECRET=your_session_secret_here
CORS_ORIGIN=*

# Logging
LOG_LEVEL=info
LOG_FILE=logs/railrush.log

# Analytics (Optional)
ANALYTICS_ENABLED=false
ANALYTICS_KEY=your_analytics_key

# Monitoring (Optional)
MONITORING_ENABLED=false
MONITORING_URL=your_monitoring_url 